%%% (где мы сами определили ститли)
%%% стилевых пакетов
%%%

\newcommand{\localStyle}[1]{ 
	\usepackage{\STYLES/#1} % стандартный импорт пакетов
}

\newcommand{\localSources}[1]{ 
	\usepackage{\SOURCES/#1} % стандартный импорт пакетов
}


\newcommand{\localAlgs}[2][]{ 
	\usepackage[#1]{\ALGS/#2} % стандартный импорт пакетов
}


